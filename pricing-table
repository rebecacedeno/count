<script>
let donations = 40000; // average monthly donations
let dcf = .3; // % of donors covering fees
let effectiveRate;
let givingSavings;
let gcSavings;

// assumptions
const cardDonations = .7;
const achDonations = .3;
const avgComp = .0275;
const avgGift = 250;


document.addEventListener("DOMContentLoaded", function () {
  // listen for checkbox
  document.querySelector("#calc-dcf-checkbox").addEventListener('change', function() {
    if(this.checked){console.log('checked');
      document.querySelector('#calc-dcf-percent').classList.remove('collapsed');
      dcf = document.querySelector('#calc-dcf-slider').value/100;
    }else{console.log('unchecked');
      document.querySelector('#calc-dcf-percent').classList.add('collapsed');
      dcf = 0;
    }
    updateResults();
  });
  // set default results
  updateResults();
});

function updateDonation(val)
{
    // update html
    document.getElementById('calc-donation-value').innerHTML = formatMoney(val);
    // update value
    donations = val;
    updateResults();
}

function updateCoveredFees(val)
{
    // update html
    document.getElementById('calc-dcf-value').innerHTML = val+'%';
    // update value
    dcf = val/100;
    updateResults();
}

function updateResults()
{
  console.log('------------------');
  console.log('dcf = '+dcf);
  // calc ACH rate
  let achRate = .01;
  achVolume = (donations * (1 - (dcf * .99999))) * achDonations;
  if(achVolume >= 10000){
    switch(true){
      case (achVolume < 20000): achRate = .0095; break; 
      case (achVolume < 30000): achRate = .009; break;
      case (achVolume < 40000): achRate = .0085; break;
      case (achVolume < 50000): achRate = .008; break;
      case (achVolume < 60000): achRate = .0075; break;
      case (achVolume < 70000): achRate = .007; break;
      case (achVolume < 80000): achRate = .0065; break;
      case (achVolume < 90000): achRate = .006; break;
      case (achVolume < 100000): achRate = .0055; break;
      case (achVolume >= 100000): achRate = .005; break;
    }
  }console.log('achRate = '+achRate);
  // calc total ACH cost
  let achTotal = ( achVolume * achRate ) * (1 - dcf);console.log('achTotal = '+achTotal);
  // calc card rate
  let cardRate = .023;
  cardVolume = (donations * (1 - (dcf * .99999))) * cardDonations;
  if(cardVolume >= 10000){
    switch(true){
      case (cardVolume < 20000): cardRate = .022; break; 
      case (cardVolume < 30000): cardRate = .0218; break;
      case (cardVolume < 40000): cardRate = .0216; break;
      case (cardVolume < 50000): cardRate = .0214; break;
      case (cardVolume < 60000): cardRate = .0212; break;
      case (cardVolume < 70000): cardRate = .021; break;
      case (cardVolume < 80000): cardRate = .0208; break;
      case (cardVolume < 90000): cardRate = .0206; break;
      case (cardVolume < 100000): cardRate = .0204; break;
      case (cardVolume < 110000): cardRate = .02; break;
      case (cardVolume < 120000): cardRate = .0198; break;
      case (cardVolume < 130000): cardRate = .0196; break;
      case (cardVolume < 140000): cardRate = .0194; break;
      case (cardVolume >= 140000): cardRate = .019; break;
    }
  }
  // calc total card cost
  console.log('cardRate = ' + cardRate);
  let cardTransactions = cardVolume / avgGift;console.log('cardTransactions = '+cardTransactions);
  let cardTotal = (( cardVolume * cardRate ) + (cardTransactions * .3)) * (1 - dcf);console.log('cardTotal = '+cardTotal);
  // calc total cost
  let total = achTotal + cardTotal;console.log('total = '+total);
  // calc effective rate
  effectiveRate = total / (donations * (1 - (dcf * .99999)));console.log('effectiveRate = '+effectiveRate);
  // calc giving savings
  givingSavings = ( effectiveRate * donations ) - ( avgComp * donations );
  // calc grow curve savings
  gcSavings = (( .01 - achRate ) * achVolume ) + (( .023 - cardRate) * cardVolume );
  
  // update html
  document.getElementById('calc-rate-value').innerHTML = (Math.floor(effectiveRate*10000)/100)+'%';
  document.getElementById('calc-savings-value').innerHTML = formatMoney(givingSavings*-1);
  document.getElementById('calc-growcurve-value').innerHTML = formatMoney(gcSavings);

  // update curve position
  //document.getElementById('calc-grow-curve').style.left = (0-Math.floor(1400 / (effectiveRate * 100)))+'px';
  document.getElementById('calc-grow-curve').style.left = 0-(800+(gcSavings*.85))+'px';
}

function formatMoney(val)
{
  val = Math.floor(val);
   return '$'+val.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ",");
}
</script>
